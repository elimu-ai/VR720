<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical">

    <com.imengyu.vr720.widget.MainThumbnailImageView
        android:id="@+id/img_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:height="200dp"
        android:clickable="true"
        android:focusable="true"
        android:saveEnabled="true"
        android:scaleType="centerCrop"
        app:imageRoundHeight="10dp"
        app:imageRoundWidth="10dp"
        app:imageSize="@string/text_un_know_size"
        app:imageText=""
        app:imageTextColor="@android:color/white"
        app:imageTextSize="15dp"
        app:srcCompat="@drawable/ic_noprob" />

    <CheckBox
        android:id="@+id/check_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="30dp"
        android:button="@drawable/check_normal"
        android:clickable="false"
        android:focusable="false"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/text_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center" />


</RelativeLayout>